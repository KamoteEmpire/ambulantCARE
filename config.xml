<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.gcccs.org.imhome" version="1.0">

	<name>ambulant CARE</name>
	<description>ambulant CARE</description>
	<author>Team GC-CCS</author>
	
	
	<icon src="icon.png" />
	<icon src="images/icon_36.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="images/icon_48.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="images/icon_72.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="images/icon_96.png" gap:platform="android" gap:qualifier="xhdpi" />
	
	<icon src="icon.png" gap:platform="winphone" />
	<icon src="tileicon.png" gap:platform="winphone" gap:role="background" />
	
	<platform name="wp8">
              <icon src="icon.png" width="99" height="99" />
              <!-- tile image -->
              <icon src="tileicon.png" width="159" height="159" />
     </platform>
	 
	 <platform name="windows8">
              <icon src="icon150.png" width="150" height="150" />
              <icon src="icon30.png" width="30" height="30" />
              <icon src="icon50.png" width="50" height="50" />
     </platform>
	 
	 <platform name="wp8">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="splashwp8.jpg" width="768" height="1280"/>
</platform>

<platform name="windows8">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="splashwindows8.jpg" width="620" height="300"/>
</platform>
	
	<gap:splash src="splashwin.jpg" gap:platform="winphone" />
	<preference name="phonegap-version" value="3.7.0" />
	<preference name="orientation" value="landscape" />
	<preference name="fullscreen" value="true" />
	
	<access origin="*" subdomains="true" />
	<access uri="*" subdomains="true" />
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.media-capture" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.file-transfer" />
	<gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.8.1" />
	<gap:plugin name="com.telerik.plugins.nativepagetransitions" version="0.2.2" />
	
	<preference name="android-minSdkVersion" value="14" />
</widget>